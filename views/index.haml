        text-align: center;
      }
      .player-health, .enemy-health {
        background: #AF8C6A;
      }
      .player-health h3, .enemy-health h3, .score-space h3 {
        margin-top: 10px;
        margin-bottom: 15px;
      }
      .player-health {
        color: white;
      }
      .player-health .fa-shield {
        color: white;
      }
      .enemy-health {
        color: #333;
      }
      .enemy-health .fa-shield {
        color: #333;
      }
      td.score-space {
        background: #E7C29D;
      }
      .end-result {
