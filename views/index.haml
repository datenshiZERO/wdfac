            %h3 Wallpaper Mode
            %form.form-inline
              .checkbox
                %label
                  %input#wallpaper{ type: "checkbox" }
                    Make the computer play against itself

            %h3 Keyboard Shortcuts

            %select#keyboard.form-control
              %option{ value: "default" } Default (Left: sdf, Mid: tyu, Right: jkl, Pause: space, Options: esc) 
              %option{ value: "oneline" } Single Line (Left: asd, Mid: fgh, Right: jkl, Pause: space, Options: esc)
              %option{ value: "numpad" } Numpad (Left: 741, Mid: 852, Right: 963, Pause: enter, Options: 0)

              %option{ value: "lefthand" } Left Hand (Left: qaz, Mid: wsx, Right: edc, Pause: space, Options: esc)
 
